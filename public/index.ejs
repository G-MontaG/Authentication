<!doctype html>
<html>
<head>
  <%- include('templates/head'); %>
</head>
<body>
<div class="container">
  <div class="jumbotron text-center">
    <h1><span class="fa fa-lock"></span> Node Authentication</h1>
    <% if(!session) { %>
    <p>Login or Register with:</p>
    <a href="/login" class="btn btn-default btn-lg"><span class="fa fa-user"></span> Login</a>
    <a href="/signup" class="btn btn-default btn-lg"><span class="fa fa-user"></span> Signup</a>
    <% } %>
    <% if(session) { %>
    <p>Go to profile:</p>
    <a href="/profile" class="btn btn-default btn-lg"><span class="fa fa-user"></span> Profile</a>
    <a href="/logout" class="btn btn-default btn-lg">Logout</a>
    <% } %>
  </div>
</div>
<%- include('templates/script'); %>
</body>
</html>